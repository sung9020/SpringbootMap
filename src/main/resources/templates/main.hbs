<script id="list" type="text/x-handlebars-template">

        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">플레이스 이름</th>
            <th scope="col">주소</th>
            <th scope="col">전화번호</th>
        </tr>
        </thead>
        <tbody>
            {{#Reponse.Documents}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{place_name}}</td>
                    <td>{{address_name}}<br><em>{{road_address_name}}</em></td>
                    <td>{{phone}}</td>
                </tr>
            {{/Reponse.Documents}}
        </tbody>
    </table>

</script>


<script id="page" type="text/x-handlebars-template">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
