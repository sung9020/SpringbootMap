<div class="input-group mb-3">
    <input type="text" class="form-control" id="keyword" placeholder="키워드를 입력하세요.">
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="search">검색</button>
    </div>
</div>

<div id="table">

</div>

